<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      
       <div>
      
      <% if params[:plan] == '2' %>
        <h1 class="text-center">Pro account</h1>
        <p>signup for the pro account for $10/month and get access to the community and contacts </p>
      
      <% else %>
        <h1 class="text-center">Basic account</h1>
        <p>signup for free and get basic access to the community </p>
      <% end %>
      </div>
      
      <div class="well">
        <h2>Signup</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
     
      
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>